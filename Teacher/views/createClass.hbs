<style>
    body{
        background-color: rgb(224 229 231);
        overflow: hidden;
    }
    .triangleRight{
        position: absolute;
        right: -3%;
        top: 50%;
        transform: rotate(90deg);
        height: 20rem;
        width: 0;
        animation: triangle 1s linear 1s forwards;
    }
    .triangleLeft{
        height: 20rem;
        width: 0;
        position: absolute;
        left: -5%;
        top: 6%;
        transform: rotate(270deg);
        animation: triangle 1s linear 0.5s forwards;
    }
    @keyframes triangle{
        0%{
            width: 0px;
        }
        50%{
            width: 40rem;
        }
        75%{
            width: 30rem;
        }
        100%{
            width: 25rem;
        }

    }
</style>
<div style="text-align: center;" class="createClassContainer ">

    <img src="https://www.fne.com/wp-content/uploads/light-blue-triangle-down.png" alt="triangle" class="triangleRight"/>
