    <form action="/teacherDashboard/create" method="POST" class="margin">
        <input type="text" name="className" placeholder="Class Name" class="margin className"> 
        <br>
        <textarea name="classDescription" placeholder="Class Description" id="classDescription" cols="30" rows="10" class="margin textArea"></textarea>
        <br>
        <input type="submit" value="Create Class" class="btn margin">
    </form>
    </div>
</div>